<?xml version="1.0" encoding="UTF-8" ?>
<odoo>
<record id="view_res_config_settings_form_inherit" model="ir.ui.view">
        <field name="name">res.config.settings.form.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@id='sync_outlook_calendar_setting']" position="after">
                <div class="col-12 col-lg-6 o_setting_box" id="tripletex_integration_details">
                    <div class="o_setting_right_pane">
                        <h3 style="text-align:left;">Tripletex Credentials</h3>
                        <div class="text-muted">
                            <label for="consumer_token"/>
                            <field name="consumer_token"/>
                            <br/>
                            <label for="employee_token"/>
                            <field name="employee_token"/>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
    </odoo>